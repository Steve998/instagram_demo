<div class="row">
  <div class="col-md-3 text-right">
    <strong><%= post.user.username %></strong>
    <%= image_tag post.user.avatar.thumb.url, class: "user_avatar" %>
  </div>
  <div class="col-md-6">
    <div>
      <%= link_to image_tag(post.photo.feed.url), post %>
    </div>
    <%= post.description %>
  </div>
  <div class="col-md-3">
  </div>
</div>
